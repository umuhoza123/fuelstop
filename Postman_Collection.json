{
  "info": {
    "name": "Fuel Route Optimizer API",
    "description": "Calculate optimal fuel stops for truck routes in USA",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/api/health/",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["api", "health", ""]
        },
        "description": "Check if API is running and fuel data is loaded"
      }
    },
    {
      "name": "Calculate Route - Short Distance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"start_location\": \"Dallas, TX\",\n  \"end_location\": \"Houston, TX\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/calculate-route/",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["api", "calculate-route", ""]
        },
        "description": "Calculate route with no fuel stops (under 500 miles)"
      }
    },
    {
      "name": "Calculate Route - Medium Distance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"start_location\": \"Los Angeles, CA\",\n  \"end_location\": \"Denver, CO\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/calculate-route/",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["api", "calculate-route", ""]
        },
        "description": "Calculate route with 2 fuel stops (~1000 miles)"
      }
    },
    {
      "name": "Calculate Route - Long Distance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"start_location\": \"New York, NY\",\n  \"end_location\": \"Los Angeles, CA\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/calculate-route/",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["api", "calculate-route", ""]
        },
        "description": "Calculate cross-country route with multiple fuel stops (~2800 miles)"
      }
    }
  ]
}
